<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/watchlistContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Watchlist"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvLoginNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:visibility="gone"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:text="@string/login_watchlist"/>

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You haven't saved any movies yet. Explore more!"
                android:textColor="@color/blue_line"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:visibility="gone"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWatchlist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:clipToPadding="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</FrameLayout>
